# Server Configuration
PORT=3000
NODE_ENV=development

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# PagerDuty Configuration
PAGERDUTY_API_KEY=your_pagerduty_api_key
PAGERDUTY_WEBHOOK_SECRET=your_webhook_signing_secret
PAGERDUTY_SERVICE_ID=your_service_id
# For self-hosted alternatives (OneUptime): PAGERDUTY_API_URL=http://localhost:3400/api

# Sanity Configuration (Context)
SANITY_PROJECT_ID=your_project_id
SANITY_DATASET=production
SANITY_TOKEN=your_sanity_token

# Parallel Configuration (Research)
PARALLEL_API_KEY=your_parallel_api_key

# Skyflow Configuration (Privacy/PII Redaction)
# API Reference: https://docs.skyflow.com/detect/
SKYFLOW_VAULT_ID=your_vault_id
SKYFLOW_VAULT_URL=https://your-vault.vault.skyflowapis.com
SKYFLOW_BEARER_TOKEN=your_bearer_token
SKYFLOW_ACCOUNT_ID=your_account_id
# Optional: Custom Detect API URL (defaults to https://manage.skyflowapis.com)
# SKYFLOW_DETECT_API_URL=https://manage.skyflowapis.com

# TRM Labs Configuration (Crypto)
TRM_API_KEY=your_trm_api_key

# Postman Configuration (Testing)
POSTMAN_API_KEY=your_postman_api_key

# mcptotal.ai Configuration (Analysis)
MCPTOTAL_API_KEY=your_mcptotal_api_key

# Lightning AI Configuration (Model)
LIGHTNING_API_KEY=your_lightning_api_key

# AI Configuration
# Options: 'anthropic' or 'gemini'
LLM_PROVIDER=anthropic

# Anthropic Configuration (Stream B dependency)
ANTHROPIC_API_KEY=your_anthropic_api_key
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Gemini Configuration
GEMINI_API_KEY=your_gemini_api_key
GEMINI_MODEL=gemini-1.5-pro-latest

# ===========================================
# Coder Configuration (Self-Hosted Sandbox)
# Docs: https://coder.com/docs/install/docker
# ===========================================
CODER_API_URL=http://localhost:7080

# Admin credentials (for Docker first-run auto-setup)
CODER_ADMIN_EMAIL=admin@localhost
CODER_ADMIN_USERNAME=admin
CODER_ADMIN_PASSWORD=changeme123

# API Token - GENERATE AFTER FIRST RUN:
# Option 1: Run ./scripts/setup-coder.sh
# Option 2: UI - Settings > Tokens > Create Token (name: ocp-token, lifetime: 1 year)
# Option 3: CLI - coder tokens create --name ocp-token --lifetime 8760h
CODER_API_TOKEN=

# Template ID - CREATE AFTER FIRST RUN:
# 1. Open http://localhost:7080/templates
# 2. Create Template > Choose "Docker" starter
# 3. Name it "remediation-sandbox"
# 4. Copy template ID from URL: /templates/<TEMPLATE_ID>
CODER_TEMPLATE_ID=

# Docker group ID (required for Docker-in-Docker)
# Run: getent group docker | cut -d: -f3
DOCKER_GROUP_ID=999

# Lightpanda Configuration (Stream B dependency)
LIGHTPANDA_WS_ENDPOINT=ws://localhost:9222

# Slack Configuration (for human approval flow)
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_APPROVAL_CHANNEL=incident-approvals
# For self-hosted alternatives (Mattermost): SLACK_API_URL=http://localhost:8065/api/v4

# Confidence Thresholds
CONFIDENCE_AUTO_EXECUTE_THRESHOLD=90
CONTEXT_MATCH_THRESHOLD=85
